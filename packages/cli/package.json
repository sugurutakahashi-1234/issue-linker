{
  "name": "issue-linker",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "issue-linker": "dist/cli.js"
  },
  "exports": {
    ".": {
      "default": "./dist/cli.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "🔨": "========== Build & Type Check ==========",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "🧪": "========== Test ==========",
    "test": "bun test",
    "test:quiet": "bun test > /dev/null 2>&1 && echo '✅ Tests passed' || echo '❌ Tests failed'",
    "🎨": "========== Code Quality ==========",
    "fix": "biome check --write --unsafe .",
    "check": "biome check .",
    "💡": "========== Help Commands ==========",
    "help:branch": "bun run src/cli.ts branch --help",
    "help:commit": "bun run src/cli.ts commit --help",
    "📚": "========== Documentation ==========",
    "docs:deps-graph": "tsg --tsconfig ../../tsconfig.typescript-graph.json --LR --abstraction packages/action --abstraction packages/core --md ../../docs/reports/dependencies/cli.md",
    "🚀": "========== CI & Clean ==========",
    "ci": "bun run fix && bun run check && bun run build && bun run typecheck && bun run test:quiet",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@issue-linker/core": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@ysk8hori/typescript-graph": "^0.26.4",
    "typescript": "^5.9.2"
  }
}
