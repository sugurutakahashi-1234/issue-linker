{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Core layer: Pure functions only, no side effects
    // tsconfig.base.json settings are already strict enough, no additional constraints needed
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/*.d.ts"]
}
