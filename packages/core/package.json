  "scripts": {
    "ğŸ”¨": "========== Build & Type Check ==========",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "ğŸ§ª": "========== Test ==========",
    "test": "bun test",
    "test:quiet": "bun test > /dev/null 2>&1 && echo 'âœ… Tests passed' || (echo 'âŒ Tests failed' && exit 1)",
    "ğŸ¨": "========== Code Quality ==========",
    "fix": "biome check --write --unsafe .",
    "check": "biome check .",
    "ğŸ“š": "========== Documentation ==========",
    "docs:deps-graph:detail": "tsg --tsconfig ../../tsconfig.typescript-graph.json --LR --abstraction packages/cli --abstraction packages/action --md ../../docs/reports/dependencies/core-detail.md",
    "docs:deps-graph:architecture": "tsg --tsconfig ../../tsconfig.typescript-graph.json --LR --abstraction packages/cli --abstraction packages/action --abstraction src/domain --abstraction src/application --abstraction src/infrastructure --md ../../docs/reports/dependencies/core-architecture.md",
    "docs:deps-graph": "bun run docs:deps-graph:detail && bun run docs:deps-graph:architecture",
    "ğŸ“¦": "========== Publishing ==========",
    "npm-publish:dry-run": "bun publish --dry-run",
    "npm-publish": "bun publish --access public",
    "ğŸš€": "========== CI & Clean ==========",
    "ci": "bun run fix && bun run check && bun run build && bun run typecheck && bun run test:quiet",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@octokit/plugin-retry": "^8.0.1",
