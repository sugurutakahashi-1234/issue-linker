    "simple-git": "^3.28.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/micromatch": "^4.0.9",
    "@ysk8hori/typescript-graph": "^0.26.4",
    "typescript": "^5.9.2"
  }
}
