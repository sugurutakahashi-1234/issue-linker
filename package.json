{
  "name": "issue-number-branch-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "issue-number-branch monorepo",
  "keywords": [],
  "author": "Suguru Takahashi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sugurutakahashi-1234/issue-number-branch.git"
  },
  "bugs": {
    "url": "https://github.com/sugurutakahashi-1234/issue-number-branch/issues"
  },
  "homepage": "https://github.com/sugurutakahashi-1234/issue-number-branch#readme",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "packages/@sugurutakahashi-1234/*"
  ],
  "scripts": {
    "🔧": "========== Workspace Commands (all packages) ==========",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun test",
    "test:quiet": "bun test > /dev/null 2>&1 && echo '✅ All tests passed' || echo '❌ Tests failed'",
    "ci": "bun run --filter '*' ci && bun run test:e2e && bun run update:docs && bun run knip",
    "🎨": "========== Monorepo-wide Lint & Format ==========",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "🧪": "========== Root-only Testing ==========",
    "test:e2e": "bun scripts/testing/e2e-npm-package.ts",
    "test:coverage": "bun test --coverage",
    "test:coverage:html": "bun test --coverage && bunx @lcov-viewer/cli lcov coverage/lcov.info -o coverage/html",
    "📚": "========== Documentation Generation ==========",
    "docs:deps-graph:overview": "tsg --tsconfig tsconfig.typescript-graph.json --LR --abstraction packages/@sugurutakahashi-1234/issue-number-branch --abstraction packages/@sugurutakahashi-1234/issue-number-branch-action --abstraction packages/@sugurutakahashi-1234/issue-number-branch-api --abstraction packages/@sugurutakahashi-1234/issue-number-branch-core --md docs/reports/dependencies/overview.md",
    "docs:deps-graph:all": "tsg --tsconfig tsconfig.typescript-graph.json --LR --md docs/reports/dependencies/all.md",
    "docs:deps-graph": "bun run docs:deps-graph:overview && bun run docs:deps-graph:all && bun run --filter '*' docs:deps-graph",
    "docs:knip": "knip -c knip.config.ts --reporter markdown > docs/reports/code-quality/unused-code.md",
    "docs:readme": "readme-i18n-sentinel --require-original-section-titles --require-original-code-blocks",
    "update:docs": "bun run docs:deps-graph && bun run docs:knip && bun run docs:readme",
    "✨": "========== Code Quality ==========",
    "knip": "knip -c knip.config.ts",
    "knip:fix": "knip -c knip.config.ts --fix",
    "✅": "========== Validation & Release ==========",
    "validate:codecov": "cat codecov.yml | curl --data-binary @- https://codecov.io/validate",
    "validate:renovate": "$(which npx) --yes --package renovate -- renovate-config-validator renovate.json5 --strict",
    "validate:branch": "git-branch-lint --config .elsikora/git-branch-lint.config.ts",
    "release:dry-run": "bunx release-please release-pr --token=$(gh auth token) --repo-url=$(gh repo view --json nameWithOwner --jq '.nameWithOwner') --debug --dry-run",
    "publish:dry-run": "npm publish --workspaces --access public --dry-run",
    "📦": "========== Dependency Management ==========",
    "deps:size": "node-size",
    "deps:check": "bunx ncu --deep",
    "deps:update": "bunx ncu -u --deep && bun run clean:build",
    "🧹": "========== Clean & Setup ==========",
    "clean": "rm -rf bun.lock node_modules dist coverage .*.bun-build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo packages/**/dist packages/**/coverage",
    "clean:install": "bun run clean && bun install",
    "clean:build": "bun run clean:install && bun run ci",
    "prepare": "husky"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@elsikora/git-branch-lint": "^1.1.2",
    "@types/bun": "^1.2.19",
    "@types/node": "^24.2.0",
    "@ysk8hori/typescript-graph": "^0.26.4",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "readme-i18n-sentinel": "^1.1.0",
    "typescript": "^5.9.2"
  }
}
